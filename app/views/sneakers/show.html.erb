<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @sneaker.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @sneaker.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency @sneaker.price.to_f / 100.00  %>
</p>

<%= form_tag charge_sneaker_path(@sneaker) do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $<%= number_to_currency @sneaker.price.to_f / 100.00 %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-email='tim.moon7@gmail.com'
          data-description=<%= @sneaker.description %>
          data-currency='AUD'
          data-amount=<%= @sneaker.price %>
          data-locale="auto"></script>
<% end %>



<%= link_to 'Edit', edit_sneaker_path(@sneaker) %> |
<%= link_to 'Back', sneakers_path %>
